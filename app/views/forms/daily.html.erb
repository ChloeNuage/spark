<div class="formulaire-adoptant" style="height: 62rem">
  <h2>CRÉATION DE PROFIL</h2>
  <h3>Mon quotidien et mon environnement</h3>

    <%= simple_form_for @user, url: daily_update_path, method: :patch, local: true do |form| %>
    <h4>Télétravail:</h4>
      <div class="formulaire-adoptant-choices-double">
        <%= form.input :remote_work,  label: 'Oui', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
        <%= form.input :remote_work,  label: 'Non', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
      </div>
      <h4>Adresse:</h4>
        <%= form.text_area :address, class: "formulaire-adoptant-form-entier" %>
      <h4>Espaces verts voisins:</h4>
        <div class="formulaire-adoptant-choices-double">
          <%= form.input :has_green_space,  label: 'Oui', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
          <%= form.input :has_green_space,  label: 'Non', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
        </div>
      <h4>Adultes total du foyer</h4>
        <%= form.number_field :household_size, class: "formulaire-adoptant-form-entier" %>
      <h4>Avez-vous des enfants?</h4>
        <div class="formulaire-adoptant-choices-double">
          <%= form.input :have_children,  label: 'Oui', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
          <%= form.input :have_children,  label: 'Non', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
        </div>
      <h4>Animaux:</h4>
        <div class="formulaire-adoptant-choices">
         <%= form.input :have_cat,  label: 'Chat', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
         <%= form.input :have_dog,  label: 'Chien', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
         <%= form.input :have_other_pet,  label: 'Autre', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
        </div>
      <h4>Mode de vie:</h4>
        <div class="formulaire-adoptant-choices-double">
          <%= form.input :lifestyle,  label: 'Actif', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
          <%= form.input :lifestyle,  label: 'Sédentaire', input_html: { class: 'formulaire-adoptant-custom-checkbox' } %>
        </div>
      <%= form.submit "Suivant", class: "main-btn"%>
      <a class="back-btn" href="welldone">Retour</a>
  <% end %>
</div>
